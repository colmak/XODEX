{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nesorox.github.io/XODEX/core/schema.json",
  "title": "XODEX Level Schema v1",
  "description": "Canonical level format for browser and future Godot clients.",
  "type": "object",
  "required": ["size", "path", "waves", "heat"],
  "properties": {
    "size": { "type": "integer", "minimum": 4, "maximum": 20 },
    "path": {
      "type": "array",
      "minItems": 2,
      "maxItems": 120,
      "items": {
        "type": "array",
        "prefixItems": [
          { "type": "integer", "minimum": 0, "maximum": 19 },
          { "type": "integer", "minimum": 0, "maximum": 19 }
        ],
        "items": false
      }
    },
    "waves": {
      "type": "array",
      "minItems": 1,
      "maxItems": 24,
      "items": {
        "type": "object",
        "required": ["t", "c"],
        "properties": {
          "t": { "type": "integer", "minimum": 1, "maximum": 9 },
          "c": { "type": "integer", "minimum": 1, "maximum": 200 }
        },
        "additionalProperties": false
      }
    },
    "heat": { "type": "integer", "minimum": 0, "maximum": 500 },
    "r": {
      "type": "string",
      "description": "Optional parent token for fork lineage.",
      "maxLength": 2048
    }
  },
  "additionalProperties": false
}
